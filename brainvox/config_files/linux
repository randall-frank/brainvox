#
#	Configuration file for Linux 
#
OS=linux
GFX=GFX_OGL
#
#	Various file extensions
#
OBJ_SUFFIX=o
LIB_SUFFIX=a
SH_SUFFIX=so
EXE_SUFFIX=
#
#	Debug flags
#
DEBUG=-O3
#
#       Local deps
#
LCL_LIB=../ext_libs/libIrisGL.a
#
#	X11 
#
XINC=-I/usr/X11R6/include
XLIB=-L/usr/X11R6/lib -lX11 -lXext
#
#	Gfx
#
GINC=-I../include -I../ext_libs
GLIB=-L../ext_libs -L/usr/lib -lIrisGL -lGL -lsgiimg -lpthread
#
#       UIF
#
UINC=-I../ext_libs
ULIB=-L../ext_libs -luif
#
#       BVOX
#
BINC=-I../ext_libs
BLIB=-L../ext_libs -luif -lvtrace -lvox3
#
#	C
#
#CC=icc
#CLIB=-static-libcxa
CC=gcc
CFLAGS=$(DEBUG) -D$(OS) $(XINC) $(GINC) -D$(GFX)
CLIB=
#
#	Fortran
#
FC=ifort
FFLAGS=$(DEBUG) -D$(OS)  $(GINC) -D$(GFX) -80 -w 
FLIB=-Vaxlib -C90 -static-libcxa
#
#       Make
#
MAKE=make
#
#	ranlib
#
RANLIB=echo
#
#       ar
#
AR=ar -r
ARP=
#
#######################################################################
#
#       Rules
#
.c.o:
	${CC} -c ${CFLAGS} $*.c
.f.o:
	${FC} -c ${FFLAGS} $*.f

